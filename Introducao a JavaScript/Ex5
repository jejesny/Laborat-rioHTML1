    <title>Exercício 5</title>

</head>
<body>

    <section>

    <div id="container">

        <h1>Reajuste salarial</h1>

        <form>
            <input type="number" id="num1" placeholder="Salario"><br/>
            <input type="number" id="num2" placeholder="% Reajuste"><br/>
        </form>

        <button id="calcular">Calcular</button>

        <div id="resultado"></div>

    </div>  

    </section>
   
</body>
        <script>
            document.getElementById("calcular").onclick = calcular;

            function calcular(){

                let num1 = parseFloat(document.getElementById("num1").value);
                let num2 = parseFloat(document.getElementById("num2").value);

                let salarioAjustado = num1 + (num1*(num2/100));

                let resultado = document.querySelector('#resultado');
                resultado.innerHTML = "O novo salário é " + salarioAjustado;

            }


        </script>
