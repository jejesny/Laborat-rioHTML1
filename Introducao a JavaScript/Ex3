<body>

    <section>

    <div id="container">

        <h1>É primo?</h1>

        <form>
            <input type="number" id="num1" placeholder="Número"><br/>
        </form>

        <button id="calcular">Calcular</button>

        <div id="resultado"></div>

    </div>  

    </section>
   
</body>
        <script>
            document.getElementById("calcular").onclick = calcular;

            function calcular(){

                let num1 = parseInt(document.getElementById("num1").value);
                let resultado = document.querySelector('#resultado');

                let numDivisores=0;

                for(let i=1 ; i<=num1 ; i++){
                    if(num1 % i == 0){
                        numDivisores++;
                    }
                }

                if(numDivisores==2){
                    resultado.innerHTML='É primo';

                    }
                else{
                    resultado.innerHTML='Não é primo';
                }
            }

        </script>
