        <script>
            document.getElementById("calcular").onclick = calcular;

            function calcular(){

                let num1 = parseInt(document.getElementById("num1").value);
                let resultado = document.querySelector('#resultado');

                let numDivisores=0;

                if(num1>=12){

                    var precoMaca = num1*1.00;

                }
                else{

                    var precoMaca = num1*1.30;

                }

                resultado.innerHTML = "O preço das maçãs é " + precoMaca;
            }

        </script>
